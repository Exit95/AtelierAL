---
import AdminLayout from "../../layouts/AdminLayout.astro";
---

<AdminLayout title="Bilderverwaltung">
    <div class="upload-section">
        <h3>üì§ Bild hochladen</h3>
        <p class="upload-hint">Laden Sie Bilder hoch, um sie in Workshops und Werken zu verwenden</p>
        
        <form id="uploadForm" class="upload-form">
            <div class="file-input-wrapper">
                <label for="fileInput" class="file-input-label">
                    <span class="file-icon">üñºÔ∏è</span>
                    <span class="file-text">Bild ausw√§hlen oder hier ablegen</span>
                    <span class="file-formats">JPG, PNG, WebP (max. 10MB)</span>
                </label>
                <input type="file" id="fileInput" accept="image/*" required />
            </div>
            <button type="submit" class="btn btn-upload">
                <span>‚¨ÜÔ∏è</span> Jetzt hochladen
            </button>
        </form>
        
        <div id="uploadMessage" class="message"></div>
        <div id="lastUpload" class="last-upload"></div>
    </div>

    <div class="images-info">
        <h4>üí° Hinweise</h4>
        <ul>
            <li>Hochgeladene Bilder werden im Verzeichnis <code>/uploads/</code> gespeichert</li>
            <li>Nach dem Upload erhalten Sie eine URL, die Sie kopieren k√∂nnen</li>
            <li>Verwenden Sie diese URL in Workshop- und Werk-Formularen</li>
        </ul>
    </div>
</AdminLayout>

<script>
    const form = document.getElementById("uploadForm") as HTMLFormElement;
    const messageDiv = document.getElementById(
        "uploadMessage",
    ) as HTMLDivElement;
    const lastUploadDiv = document.getElementById(
        "lastUpload",
    ) as HTMLDivElement;

    form?.addEventListener("submit", async (e) => {
        e.preventDefault();
        messageDiv.textContent = "";
        lastUploadDiv.innerHTML = "";

        const fileInput = document.getElementById(
            "fileInput",
        ) as HTMLInputElement;
        const file = fileInput.files?.[0];

        if (!file) return;

        const formData = new FormData();
        formData.append("file", file);

        try {
            messageDiv.textContent = "Hochladen...";
            messageDiv.className = "message";

            const res = await fetch("/api/upload", {
                method: "POST",
                body: formData,
            });

            const result = await res.json();

            if (result.success) {
                messageDiv.textContent = "Bild erfolgreich hochgeladen!";
                messageDiv.className = "message success";

                lastUploadDiv.innerHTML = `
          <h4>Hochgeladenes Bild:</h4>
          <img src="${result.url}" alt="Uploaded" style="max-width: 300px; border-radius: 8px;" />
          <p><strong>URL:</strong> <code>${result.url}</code></p>
          <button onclick="navigator.clipboard.writeText('${result.url}')" class="btn btn-secondary btn-sm">
            URL kopieren
          </button>
        `;

                form.reset();
            } else {
                messageDiv.textContent =
                    result.error || "Fehler beim Hochladen";
                messageDiv.className = "message error";
            }
        } catch (e) {
            messageDiv.textContent = "Fehler beim Hochladen";
            messageDiv.className = "message error";
        }
    });
</script>

<style>
    .upload-section {
        background: white;
        border-radius: var(--radius-lg);
        padding: 2.5rem;
        margin-bottom: 2rem;
        box-shadow: var(--shadow-md);
    }

    .upload-section h3 {
        margin-top: 0;
        margin-bottom: 0.5rem;
        font-size: var(--font-size-2xl);
        color: var(--color-text-primary);
        font-family: var(--font-headline);
    }

    .upload-hint {
        color: var(--color-text-secondary);
        margin-bottom: 2rem;
        font-size: var(--font-size-sm);
    }

    .upload-form {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .file-input-wrapper {
        position: relative;
    }

    .file-input-wrapper input[type="file"] {
        position: absolute;
        opacity: 0;
        width: 100%;
        height: 100%;
        cursor: pointer;
    }

    .file-input-label {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 3rem 2rem;
        background: var(--color-brand-beige-light);
        border: 2px dashed var(--color-brand-beige);
        border-radius: var(--radius-lg);
        cursor: pointer;
        transition: all var(--transition-base);
    }

    .file-input-label:hover, 
    .file-input-wrapper:has(input:focus) .file-input-label {
        background: var(--color-brand-beige);
        border-color: var(--color-accent);
        transform: translateY(-2px);
    }

    .file-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .file-text {
        font-size: var(--font-size-lg);
        font-weight: var(--font-weight-semibold);
        color: var(--color-text-primary);
        margin-bottom: 0.5rem;
    }

    .file-formats {
        font-size: var(--font-size-sm);
        color: var(--color-text-secondary);
    }

    .btn {
        padding: 1rem 2rem;
        border-radius: var(--radius-sm);
        border: none;
        font-weight: var(--font-weight-semibold);
        cursor: pointer;
        transition: all var(--transition-base);
        font-size: var(--font-size-base);
        font-family: var(--font-body);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .btn-upload {
        background: var(--color-brand-beige);
        color: white;
        width: 100%;
        font-size: var(--font-size-lg);
        padding: 1.25rem;
    }

    .btn-upload:hover {
        background: var(--color-accent);
        transform: translateY(-2px);
        box-shadow: var(--shadow-lg);
    }

    .btn-secondary {
        background: var(--color-gray-100);
        color: var(--color-text-primary);
    }

    .btn-secondary:hover {
        background: var(--color-gray-200);
    }

    .btn-sm {
        padding: 0.625rem 1.25rem;
        font-size: var(--font-size-sm);
    }

    .message {
        padding: 1rem 1.5rem;
        border-radius: var(--radius-sm);
        margin-bottom: 1rem;
        font-weight: var(--font-weight-medium);
    }

    .message.success {
        background: var(--color-success-light);
        color: var(--color-success);
        border: 1px solid var(--color-success);
    }

    .message.error {
        background: var(--color-error-light);
        color: var(--color-error);
        border: 1px solid var(--color-error);
    }

    .last-upload {
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 2px solid var(--color-border-light);
    }

    .last-upload h4 {
        margin-top: 0;
        margin-bottom: 1rem;
        color: var(--color-text-primary);
        font-family: var(--font-headline);
    }

    .last-upload img {
        margin: 1rem 0;
        border-radius: var(--radius-base);
        box-shadow: var(--shadow-md);
    }

    .last-upload code {
        background: var(--color-gray-100);
        padding: 0.5rem 1rem;
        border-radius: var(--radius-sm);
        font-size: var(--font-size-sm);
        font-family: 'Courier New', monospace;
        display: inline-block;
        margin: 0.5rem 0;
    }

    .images-info {
        background: var(--color-surface);
        border-radius: var(--radius-lg);
        padding: 2rem;
        border-left: 4px solid var(--color-brand-beige);
    }

    .images-info h4 {
        margin-top: 0;
        margin-bottom: 1rem;
        color: var(--color-text-primary);
        font-family: var(--font-headline);
    }

    .images-info ul {
        margin: 0;
        padding-left: 1.5rem;
    }

    .images-info li {
        margin-bottom: 0.75rem;
        color: var(--color-text-secondary);
        line-height: var(--line-height-relaxed);
    }

    .images-info code {
        background: white;
        padding: 0.25rem 0.5rem;
        border-radius: var(--radius-sm);
        font-family: 'Courier New', monospace;
        color: var(--color-accent);
        font-weight: var(--font-weight-semibold);
    }
</style>
