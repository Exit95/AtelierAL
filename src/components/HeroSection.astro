---
interface Props {
    title: string;
    subtitle?: string;
    backgroundImage?: string;
    primaryCTA?: { label: string; href: string };
    secondaryCTA?: { label: string; href: string };
}

const { title, subtitle, backgroundImage, primaryCTA, secondaryCTA } =
    Astro.props;
import CTAButton from "./CTAButton.astro";
---

<section
    class="hero"
    style={backgroundImage ? `background-image: url(${backgroundImage})` : ""}
>
    <div class="hero-overlay"></div>
    <div class="hero-content container">
        <img src="/logo-clean.png?v=5" alt="ATELIER KL Logo" class="hero-logo" />
        <h1 class="hero-title">{title}</h1>
        {subtitle && <p class="hero-subtitle">{subtitle}</p>}
        {
            (primaryCTA || secondaryCTA) && (
                <div class="hero-ctas">
                    {primaryCTA && (
                        <CTAButton
                            label={primaryCTA.label}
                            href={primaryCTA.href}
                            type="primary"
                        />
                    )}
                    {secondaryCTA && (
                        <CTAButton
                            label={secondaryCTA.label}
                            href={secondaryCTA.href}
                            type="secondary"
                        />
                    )}
                </div>
            )
        }
    </div>
</section>

<style>
    .hero {
        position: relative;
        min-height: 60vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: var(--color-brand-beige-light);
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        overflow: hidden;
        padding: var(--space-8) 0;
    }

    .hero-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            135deg,
            rgba(201, 188, 179, 0.85) 0%,
            rgba(163, 154, 146, 0.75) 100%
        );
        z-index: 1;
    }

    .hero-content {
        position: relative;
        z-index: 2;
        text-align: center;
        color: var(--color-white);
        animation: fadeIn var(--transition-slow);
        padding: var(--space-4);
    }

    .hero-logo {
        width: 80px;
        height: 80px;
        margin: 0 auto var(--space-4);
        object-fit: contain;
    }

    .hero-title {
        color: var(--color-white);
        font-size: var(--font-size-3xl);
        margin-bottom: var(--space-3);
        text-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        line-height: var(--line-height-tight);
    }

    .hero-subtitle {
        font-size: var(--font-size-base);
        font-weight: var(--font-weight-normal);
        max-width: 90%;
        margin: 0 auto var(--space-6);
        opacity: 0.95;
        line-height: var(--line-height-relaxed);
    }

    .hero-ctas {
        display: flex;
        gap: var(--space-3);
        justify-content: center;
        flex-wrap: wrap;
    }

    /* Small smartphones: 375px+ */
    @media (min-width: 375px) {
        .hero-logo {
            width: 90px;
            height: 90px;
        }

        .hero-title {
            font-size: var(--font-size-4xl);
        }

        .hero-subtitle {
            font-size: var(--font-size-lg);
        }
    }

    /* Tablets: 768px+ */
    @media (min-width: 768px) {
        .hero {
            min-height: 70vh;
            padding: var(--space-12) 0;
        }

        .hero-content {
            padding: var(--space-6);
        }

        .hero-logo {
            width: 110px;
            height: 110px;
            margin-bottom: var(--space-5);
        }

        .hero-title {
            font-size: var(--font-size-5xl);
            margin-bottom: var(--space-4);
        }

        .hero-subtitle {
            font-size: var(--font-size-xl);
            max-width: 600px;
            margin-bottom: var(--space-8);
        }

        .hero-ctas {
            gap: var(--space-4);
        }
    }

    /* Desktop: 1024px+ */
    @media (min-width: 1024px) {
        .hero {
            min-height: 80vh;
        }

        .hero-logo {
            width: 130px;
            height: 130px;
            margin-bottom: var(--space-6);
        }

        .hero-subtitle {
            max-width: 700px;
        }
    }

    /* Large desktop: 1440px+ */
    @media (min-width: 1440px) {
        .hero {
            min-height: 85vh;
        }

        .hero-logo {
            width: 150px;
            height: 150px;
        }

        .hero-subtitle {
            max-width: 800px;
        }
    }
</style>
