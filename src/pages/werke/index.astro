---
import Layout from "../../layouts/Layout.astro";
import GalleryGrid from "../../components/GalleryGrid.astro";
import { getItems, type Artwork } from "../../lib/storage";

const allArtworks = await getItems<Artwork>("artworks");
---

<Layout
    title="Werke"
    description="Entdecken Sie abstrakte Kunstwerke von Katharina Lanvermann. Einzigartige Acrylbilder in warmen Erdtönen und mediterranen Farben."
>
    <section class="section py-16 dark-section">
        <div class="container">
            <h1 class="section-title handwriting">Werke</h1>
            <p class="hero-subtitle">
                Einzigartige abstrakte Kunstwerke, die Räume verwandeln
            </p>
            <div class="gallery-container">
                <GalleryGrid artworks={allArtworks} />
            </div>
        </div>
    </section>
</Layout>

<style>
    .dark-section {
        background-color: var(--color-dark);
        color: var(--color-text-light);
    }

    .section-title.handwriting {
        font-family: 'Dancing Script', cursive;
        font-size: clamp(3rem, 6vw, 5rem);
        font-weight: 500;
        line-height: 1.1;
        margin-bottom: var(--spacing-md);
        text-align: center;
        color: white;
    }

    .hero-subtitle {
        font-size: var(--font-size-xl);
        color: var(--color-light);
        max-width: 600px;
        margin: 0 auto var(--spacing-lg);
        text-align: center;
    }

    .gallery-container {
        margin-top: var(--spacing-lg);
    }
</style>
