---
import Layout from "../layouts/Layout.astro";
import ContactForm from "../components/ContactForm.astro";
---

<Layout
    title="Kontakt"
    description="Kontaktieren Sie ATELIER KL fÃ¼r Anfragen zu Kunstwerken, Auftragsarbeiten oder Workshop-Buchungen. Ich freue mich auf Ihre Nachricht!"
>
    <!-- Contact Section - Split Layout -->
    <section class="contact-section">
        <div class="contact-grid">
            <!-- Left: Contact Info -->
            <div class="contact-info">
                <div class="info-content">
                    <h1 class="hero-title">
                        <span class="title-line">TRETE IN</span>
                        <span class="title-handwriting handwriting">Kontakt</span>
                    </h1>

                    <div class="contact-details">
                        <div class="contact-item">
                            <span class="contact-label">E-Mail:</span>
                            <a href="mailto:studio@atelierkl.de" class="contact-value">studio@atelierkl.de</a>
                        </div>

                        <div class="contact-item">
                            <span class="contact-label">Instagram:</span>
                            <a href="https://instagram.com/atelierkl_" target="_blank" rel="noopener noreferrer" class="contact-value">@atelierkl_</a>
                        </div>
                    </div>

                    <div class="logo-area">
                        <img src="/logo-kl.png" alt="ATELIER KL Logo" class="contact-logo" />
                        <div class="logo-text">
                            <span class="logo-name">ATELIER KL</span>
                            <span class="logo-tagline">ABSTRAKTE KUNST & WORKSHOPS</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right: Contact Form -->
            <div class="contact-form-area">
                <ContactForm />
            </div>
        </div>
    </section>
</Layout>

<style>
    /* Contact Section */
    .contact-section {
        min-height: 100vh;
    }

    .contact-grid {
        display: grid;
        grid-template-columns: 1fr;
        min-height: 100vh;
    }

    @media (min-width: 768px) {
        .contact-grid {
            grid-template-columns: 1fr 1fr;
        }
    }

    /* Left: Contact Info */
    .contact-info {
        background-color: var(--color-dark);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: var(--space-12);
        min-height: 50vh;
    }

    @media (min-width: 768px) {
        .contact-info {
            min-height: 100vh;
        }
    }

    .info-content {
        max-width: 400px;
    }

    /* Title */
    .hero-title {
        margin-bottom: var(--space-12);
    }

    .title-line {
        display: block;
        font-family: var(--font-sans);
        font-size: clamp(1.5rem, 3vw, 2rem);
        font-weight: 400;
        letter-spacing: 0.2em;
        color: var(--color-light);
        opacity: 0.8;
    }

    .title-handwriting.handwriting {
        display: block;
        font-family: 'Dancing Script', cursive;
        font-size: clamp(3rem, 6vw, 4.5rem);
        font-weight: 500;
        color: white;
        line-height: 1.1;
        font-style: italic;
    }

    /* Contact Details */
    .contact-details {
        margin-bottom: var(--space-12);
    }

    .contact-item {
        margin-bottom: var(--space-6);
    }

    .contact-label {
        display: block;
        font-size: var(--font-size-sm);
        color: var(--color-light);
        opacity: 0.7;
        margin-bottom: var(--space-1);
    }

    .contact-value {
        font-size: var(--font-size-base);
        color: var(--color-light);
        text-decoration: none;
        transition: opacity var(--transition-fast);
    }

    .contact-value:hover {
        opacity: 0.7;
    }

    /* Logo Area */
    .logo-area {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        margin-top: var(--space-8);
    }

    .contact-logo {
        width: 80px;
        height: auto;
        margin-bottom: var(--space-3);
    }

    .logo-text {
        display: flex;
        flex-direction: column;
        gap: var(--space-1);
    }

    .logo-name {
        font-family: var(--font-sans);
        font-size: var(--font-size-lg);
        font-weight: 400;
        letter-spacing: 0.15em;
        color: var(--color-light);
    }

    .logo-tagline {
        font-size: 0.65rem;
        letter-spacing: 0.2em;
        color: var(--color-light);
        opacity: 0.6;
    }

    /* Right: Contact Form */
    .contact-form-area {
        background-color: var(--color-surface);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: var(--space-12);
        min-height: 50vh;
    }

    @media (min-width: 768px) {
        .contact-form-area {
            min-height: 100vh;
        }
    }
</style>
