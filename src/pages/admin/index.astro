---
import AdminLayout from "../../layouts/AdminLayout.astro";
import { getItems, type Workshop, type Artwork, type Review } from "../../lib/storage";
import { readdir } from 'fs/promises';
import { join } from 'path';

const workshops = await getItems<Workshop>("workshops");
const artworks = await getItems<Artwork>("artworks");
const reviews = await getItems<Review>("reviews");

// Count images
let imageCount = 0;
try {
    const isProd = import.meta.env.PROD;
    const uploadsDir = isProd
        ? join(process.cwd(), 'uploads')
        : join(process.cwd(), 'public', 'uploads');
    
    const files = await readdir(uploadsDir);
    imageCount = files.filter(file => 
        !file.startsWith('.') && 
        file !== 'temp' && 
        /\.(jpg|jpeg|png|gif|webp)$/i.test(file)
    ).length;
} catch (error) {
    console.error('Error counting images:', error);
}
