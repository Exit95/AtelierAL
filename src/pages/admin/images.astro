---
import AdminLayout from "../../layouts/AdminLayout.astro";
---

<AdminLayout title="Bilderverwaltung">
    <div class="upload-section">
        <h3>üì§ Bild hochladen</h3>
        <p class="upload-hint">
            Laden Sie Bilder hoch, um sie in Workshops und Werken zu verwenden
        </p>

        <form id="uploadForm" class="upload-form">
            <div class="file-input-wrapper">
                <label for="fileInput" class="file-input-label">
                    <span class="file-icon">üñºÔ∏è</span>
                    <span class="file-text"
                        >Bild ausw√§hlen oder hier ablegen</span
                    >
                    <span class="file-formats">JPG, PNG, WebP (max. 25MB)</span>
                </label>
                <input type="file" id="fileInput" accept="image/*" />
            </div>
            <button type="button" id="uploadBtn" class="btn btn-upload">
                <span>‚¨ÜÔ∏è</span> Jetzt hochladen
            </button>
        </form>

        <div id="uploadMessage" class="message"></div>
        <div id="lastUpload" class="last-upload"></div>
    </div>

    <div class="gallery-section">
        <h3>üìÇ Bildergalerie</h3>
        <div id="galleryGrid" class="gallery-grid">
            <p>Lade Bilder...</p>
        </div>
    </div>

    <div class="images-info">
        <h4>üí° Hinweise</h4>
        <ul>
            <li>
                Hochgeladene Bilder werden im Verzeichnis <code>/uploads/</code>
                gespeichert
            </li>
            <li>
                Nach dem Upload erhalten Sie eine URL, die Sie kopieren k√∂nnen
            </li>
            <li>Verwenden Sie diese URL in Workshop- und Werk-Formularen</li>
        </ul>
    </div>
</AdminLayout>

<script>
    const form = document.getElementById("uploadForm") as HTMLFormElement;
    const fileInput = document.getElementById("fileInput") as HTMLInputElement;
    const fileLabel = document.querySelector(
        ".file-input-label",
    ) as HTMLLabelElement;
    const fileText = document.querySelector(".file-text") as HTMLSpanElement;
    const messageDiv = document.getElementById(
        "uploadMessage",
    ) as HTMLDivElement;
    const lastUploadDiv = document.getElementById(
        "lastUpload",
    ) as HTMLDivElement;

    // Visual feedback for file selection
    fileInput?.addEventListener("change", () => {
        if (fileInput.files && fileInput.files[0]) {
            fileText.textContent = `‚úÖ ${fileInput.files[0].name}`;
            fileLabel.classList.add("has-file");
        }
    });

    // Drag and Drop support
    ["dragenter", "dragover", "dragleave", "drop"].forEach((eventName) => {
        fileLabel?.addEventListener(eventName, preventDefaults, false);
    });

    function preventDefaults(e: Event) {
        e.preventDefault();
        e.stopPropagation();
    }

    ["dragenter", "dragover"].forEach((eventName) => {
        fileLabel?.addEventListener(eventName, highlight, false);
    });

    ["dragleave", "drop"].forEach((eventName) => {
        fileLabel?.addEventListener(eventName, unhighlight, false);
    });

    function highlight() {
        fileLabel.classList.add("highlight");
    }

    function unhighlight() {
        fileLabel.classList.remove("highlight");
    }

    fileLabel?.addEventListener("drop", handleDrop, false);

    function handleDrop(e: DragEvent) {
        const dt = e.dataTransfer;
        const files = dt?.files;

        if (files && files.length > 0) {
            fileInput.files = files;
            // Trigger change event manually
            const event = new Event("change");
            fileInput.dispatchEvent(event);
        }
    }

    const uploadBtn = document.getElementById("uploadBtn") as HTMLButtonElement;

    uploadBtn?.addEventListener("click", async (e) => {
        e.preventDefault();
        e.stopPropagation(); // Stop bubbling just in case

        messageDiv.textContent = "";
        lastUploadDiv.innerHTML = "";

        const file = fileInput.files?.[0];

        if (!file) {
            messageDiv.textContent = "Bitte w√§hlen Sie zuerst ein Bild aus.";
            messageDiv.className = "message error";
            return;
        }

        // Client-side size check (25MB)
        if (file.size > 25 * 1024 * 1024) {
            messageDiv.textContent = "Datei ist zu gro√ü (Max. 25MB)";
            messageDiv.className = "message error";
            return;
        }

        const formData = new FormData();
        formData.append("file", file);

        try {
            messageDiv.textContent = "Hochladen...";
            messageDiv.className = "message";
            uploadBtn.disabled = true; // Prevent double click

            const res = await fetch(
                "https://test-danapfel-digital.de/upload-proxy.php",
                {
                    method: "POST",
                    body: formData,
                },
            );

            let result;
            try {
                result = await res.json();
            } catch (err) {
                console.error("JSON Parse Error:", err);
                throw new Error("Ung√ºltige Server-Antwort");
            }

            if (res.ok && result.success) {
                messageDiv.textContent = "Bild erfolgreich hochgeladen!";
                messageDiv.className = "message success";

                lastUploadDiv.innerHTML = `
          <h4>Hochgeladenes Bild:</h4>
          <img src="${result.url}" alt="Uploaded" style="max-width: 300px; border-radius: 8px;" />
          <p><strong>URL:</strong> <code>${result.url}</code></p>
          <button onclick="navigator.clipboard.writeText('${result.url}')" class="btn btn-secondary btn-sm">
            URL kopieren
          </button>
        `;

                form.reset();
                fileText.textContent = "Bild ausw√§hlen oder hier ablegen";
                fileLabel.classList.remove("has-file");
            } else {
                console.error("Upload failed:", result);
                messageDiv.textContent =
                    result.error || `Fehler beim Hochladen (${res.status})`;
                messageDiv.className = "message error";
            }
        } catch (e) {
            console.error("Upload error:", e);
            messageDiv.textContent =
                "Fehler beim Hochladen: " +
                (e instanceof Error ? e.message : String(e));
            messageDiv.className = "message error";
        } finally {
            uploadBtn.disabled = false;
        }
    });

    // Gallery Logic
    const galleryGrid = document.getElementById("galleryGrid");

    async function loadGallery() {
        try {
            const res = await fetch(
                "https://proxy.danapfel-digital.de/gallery-api.php",
            );
            if (!res.ok) throw new Error("Failed to load images");
            const images = await res.json();

            if (images.length === 0) {
                galleryGrid.innerHTML = "<p>Noch keine Bilder hochgeladen.</p>";
                return;
            }

            galleryGrid.innerHTML = images
                .map(
                    (img) => `
                <div class="gallery-item">
                    <div class="img-wrapper">
                        <img src="${img.url}" alt="${img.name}" loading="lazy" />
                    </div>
                    <div class="img-info">
                        <span class="img-name" title="${img.name}">${img.name}</span>
                        <button onclick="navigator.clipboard.writeText('${img.url}')" class="btn-copy" title="URL kopieren">
                            üìã
                        </button>
                    </div>
                </div>
            `,
                )
                .join("");
        } catch (error) {
            console.error("Gallery error:", error);
            galleryGrid.innerHTML =
                '<p class="error">Fehler beim Laden der Galerie.</p>';
        }
    }

    // Load gallery on start
    loadGallery();
</script>

<style>
    .upload-section {
        background: white;
        border-radius: var(--radius-lg);
        padding: 2.5rem;
        margin-bottom: 2rem;
        box-shadow: var(--shadow-md);
    }

    .upload-section h3 {
        margin-top: 0;
        margin-bottom: 0.5rem;
        font-size: var(--font-size-2xl);
        color: var(--color-text-primary);
        font-family: var(--font-headline);
    }

    .gallery-section {
        background: white;
        border-radius: var(--radius-lg);
        padding: 2.5rem;
        margin-bottom: 2rem;
        box-shadow: var(--shadow-md);
    }

    .gallery-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
        gap: 1rem;
        margin-top: 1.5rem;
    }

    .gallery-item {
        border: 1px solid var(--color-border);
        border-radius: var(--radius-md);
        overflow: hidden;
        background: var(--color-bg-subtle);
    }

    .img-wrapper {
        aspect-ratio: 1;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f0f0f0;
    }

    .img-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.2s;
    }

    .gallery-item:hover .img-wrapper img {
        transform: scale(1.05);
    }

    .img-info {
        padding: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 0.5rem;
        border-top: 1px solid var(--color-border);
    }

    .img-name {
        font-size: 0.75rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        color: var(--color-text-muted);
    }

    .btn-copy {
        background: none;
        border: none;
        cursor: pointer;
        padding: 0.25rem;
        border-radius: 4px;
        transition: background 0.2s;
    }

    .btn-copy:hover {
        background: var(--color-bg-hover);
    }

    .upload-hint {
        color: var(--color-text-secondary);
        margin-bottom: 2rem;
        font-size: var(--font-size-sm);
    }

    .upload-form {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .file-input-wrapper {
        position: relative;
    }

    .file-input-wrapper input[type="file"] {
        position: absolute;
        opacity: 0;
        width: 100%;
        height: 100%;
        cursor: pointer;
    }

    .file-input-label {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 3rem 2rem;
        background: var(--color-brand-beige-light);
        border: 2px dashed var(--color-brand-beige);
        border-radius: var(--radius-lg);
        cursor: pointer;
        transition: all var(--transition-base);
    }

    .file-input-label:hover,
    .file-input-wrapper:has(input:focus) .file-input-label,
    .file-input-label.highlight {
        background: var(--color-brand-beige);
        border-color: var(--color-accent);
        transform: translateY(-2px);
    }

    .file-input-label.has-file {
        background: var(--color-success-light);
        border-color: var(--color-success);
        border-style: solid;
    }

    .file-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .file-text {
        font-size: var(--font-size-lg);
        font-weight: var(--font-weight-semibold);
        color: var(--color-text-primary);
        margin-bottom: 0.5rem;
    }

    .file-formats {
        font-size: var(--font-size-sm);
        color: var(--color-text-secondary);
    }

    .btn {
        padding: 1rem 2rem;
        border-radius: var(--radius-sm);
        border: none;
        font-weight: var(--font-weight-semibold);
        cursor: pointer;
        transition: all var(--transition-base);
        font-size: var(--font-size-base);
        font-family: var(--font-body);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

    .btn-upload {
        background: var(--color-brand-beige);
        color: white;
        width: 100%;
        font-size: var(--font-size-lg);
        padding: 1.25rem;
        position: relative;
        z-index: 10;
    }

    .btn-upload:hover {
        background: var(--color-accent);
        transform: translateY(-2px);
        box-shadow: var(--shadow-lg);
    }

    .btn-secondary {
        background: var(--color-gray-100);
        color: var(--color-text-primary);
    }

    .btn-secondary:hover {
        background: var(--color-gray-200);
    }

    .btn-sm {
        padding: 0.625rem 1.25rem;
        font-size: var(--font-size-sm);
    }

    .message {
        padding: 1rem 1.5rem;
        border-radius: var(--radius-sm);
        margin-bottom: 1rem;
        font-weight: var(--font-weight-medium);
    }

    .message.success {
        background: var(--color-success-light);
        color: var(--color-success);
        border: 1px solid var(--color-success);
    }

    .message.error {
        background: var(--color-error-light);
        color: var(--color-error);
        border: 1px solid var(--color-error);
    }

    .last-upload {
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 2px solid var(--color-border-light);
    }

    .last-upload h4 {
        margin-top: 0;
        margin-bottom: 1rem;
        color: var(--color-text-primary);
        font-family: var(--font-headline);
    }

    .last-upload img {
        margin: 1rem 0;
        border-radius: var(--radius-base);
        box-shadow: var(--shadow-md);
    }

    .last-upload code {
        background: var(--color-gray-100);
        padding: 0.5rem 1rem;
        border-radius: var(--radius-sm);
        font-size: var(--font-size-sm);
        font-family: "Courier New", monospace;
        display: inline-block;
        margin: 0.5rem 0;
    }

    .images-info {
        background: var(--color-surface);
        border-radius: var(--radius-lg);
        padding: 2rem;
        border-left: 4px solid var(--color-brand-beige);
    }

    .images-info h4 {
        margin-top: 0;
        margin-bottom: 1rem;
        color: var(--color-text-primary);
        font-family: var(--font-headline);
    }

    .images-info ul {
        margin: 0;
        padding-left: 1.5rem;
    }

    .images-info li {
        margin-bottom: 0.75rem;
        color: var(--color-text-secondary);
        line-height: var(--line-height-relaxed);
    }

    .images-info code {
        background: white;
        padding: 0.25rem 0.5rem;
        border-radius: var(--radius-sm);
        font-family: "Courier New", monospace;
        color: var(--color-accent);
        font-weight: var(--font-weight-semibold);
    }
</style>
