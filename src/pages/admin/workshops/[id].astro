---
import AdminLayout from "../../../layouts/AdminLayout.astro";
import { getItem, type Workshop } from "../../../lib/storage";

const { id } = Astro.params;
const workshop = id ? await getItem<Workshop>("workshops", id) : null;

if (!workshop) {
    return Astro.redirect("/admin/workshops");
}

const data = workshop;
const dateStr = new Date(data.date).toISOString().split("T")[0];
const materialsStr = Array.isArray(data.materials)
    ? data.materials.join("\n")
    : "";
---

<AdminLayout title="Workshop bearbeiten">
    <form id="workshopForm" class="admin-form">
        <div class="form-group">
            <label for="title">Titel*</label>
            <input
                type="text"
                id="title"
                name="title"
                required
                value={data.title}
            />
        </div>

        <div class="form-group">
            <label for="description">Beschreibung*</label>
            <textarea id="description" name="description" required rows="5"
                >{data.description}</textarea
            >
        </div>

        <div class="form-row">
            <div class="form-group">
                <label for="date">Datum*</label>
                <input
                    type="date"
                    id="date"
                    name="date"
                    required
                    value={dateStr}
                />
            </div>

            <div class="form-group">
                <label for="time">Uhrzeit*</label>
                <input
                    type="text"
                    id="time"
                    name="time"
                    required
                    value={data.time}
                />
            </div>
        </div>

        <div class="form-group">
            <label for="duration">Dauer*</label>
            <input
                type="text"
                id="duration"
                name="duration"
                required
                value={data.duration}
            />
        </div>

        <div class="form-group">
            <label for="location">Ort*</label>
            <input
                type="text"
                id="location"
                name="location"
                required
                value={data.location}
            />
        </div>

        <div class="form-row">
            <div class="form-group">
                <label for="maxParticipants">Max. Teilnehmer*</label>
                <input
                    type="number"
                    id="maxParticipants"
                    name="maxParticipants"
                    required
                    value={data.maxParticipants}
                />
            </div>

            <div class="form-group">
                <label for="currentParticipants">Aktuelle Teilnehmer</label>
                <input
                    type="number"
                    id="currentParticipants"
                    name="currentParticipants"
                    value={data.currentParticipants}
                />
            </div>
        </div>

        <div class="form-group">
            <label for="price">Preis (€)*</label>
            <input
                type="number"
                id="price"
                name="price"
                step="0.01"
                required
                value={data.price}
            />
        </div>

        <div class="form-group">
            <label for="image">Bild-URL*</label>
            <input
                type="text"
                id="image"
                name="image"
                required
                value={data.image}
            />
        </div>

        <div class="form-group">
            <label for="materials">Materialien (eine pro Zeile)*</label>
            <textarea id="materials" name="materials" rows="5" required
                >{materialsStr}</textarea
            >
        </div>

        <div class="form-group">
            <label>
                <input
                    type="checkbox"
                    id="bookingEnabled"
                    name="bookingEnabled"
                    checked={data.bookingEnabled}
                />
                Buchung aktiviert
            </label>
        </div>

        <div class="form-actions">
            <a href="/admin/workshops" class="btn btn-secondary">Abbrechen</a>
            <button type="submit" class="btn btn-primary"
                >Änderungen speichern</button
            >
        </div>

        <div id="message" class="message"></div>
    </form>
</AdminLayout>

<script define:vars={{ workshopId: id }}>
    const form = document.getElementById("workshopForm");
    const messageDiv = document.getElementById("message");

    form?.addEventListener("submit", async (e) => {
        e.preventDefault();
        messageDiv.textContent = "";

        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());

        // Checkbox explizit setzen (unchecked = nicht in FormData)
        const bookingCheckbox = document.getElementById("bookingEnabled");
        data.bookingEnabled = bookingCheckbox?.checked ? "true" : "false";

        try {
            const res = await fetch(`/api/workshops/${workshopId}/update`, {
                method: "PUT",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify(data),
            });

            const result = await res.json();

            if (result.success) {
                messageDiv.textContent = "Workshop erfolgreich aktualisiert!";
                messageDiv.className = "message success";
                setTimeout(
                    () => (window.location.href = "/admin/workshops"),
                    1500,
                );
            } else {
                messageDiv.textContent =
                    result.error || "Fehler beim Speichern";
                messageDiv.className = "message error";
            }
        } catch (e) {
            messageDiv.textContent = "Fehler beim Speichern der Änderungen";
            messageDiv.className = "message error";
        }
    });
</script>

<style>
    /* Same styles as create.astro */
    .admin-form {
        background: white;
        border-radius: 12px;
        padding: 2rem;
        max-width: 800px;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 600;
        color: #333;
    }

    .form-group input,
    .form-group textarea {
        width: 100%;
        padding: 0.75rem;
        border: 2px solid #e0e0e0;
        border-radius: 6px;
        font-size: 1rem;
        font-family: inherit;
        box-sizing: border-box;
    }

    .form-group input:focus,
    .form-group textarea:focus {
        outline: none;
        border-color: var(--color-brand-beige);
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    .form-actions {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn {
        padding: 0.875rem 1.5rem;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        border: none;
        cursor: pointer;
        transition: all 0.2s;
    }

    .btn-primary {
        background: #c9a882 !important;
        color: white !important;
    }

    .btn-primary:hover {
        background: #b8956f !important;
        transform: translateY(-2px);
    }

    .btn-secondary {
        background: #f5f5f5;
        color: #333;
    }

    .message {
        margin-top: 1rem;
        padding: 1rem;
        border-radius: 6px;
    }

    .message.error {
        background: #ffebee;
        color: #c62828;
    }

    .message.success {
        background: #e8f5e9;
        color: #2e7d32;
    }

    @media (max-width: 768px) {
        .form-row {
            grid-template-columns: 1fr;
        }
    }
</style>
