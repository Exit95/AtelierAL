---
import Layout from "../layouts/Layout.astro";
import { getItems, type Artwork } from "../lib/storage";

// Lade die letzten 4 Werke für "Bisherige Arbeit"
const allArtworks = await getItems<Artwork>("artworks");
const recentArtworks = allArtworks.slice(0, 4);
---

<Layout
    title="Über mich"
    description="Katharina Lanvermann - Abstrakte Künstlerin aus Ahaus. Erfahren Sie mehr über mich und meine künstlerische Vision."
>
    <!-- Über Mich Section -->
    <section class="section dark-section" style="padding-top: 8rem; padding-bottom: 4rem;">
        <div class="container">
            <div class="content-grid">
                <div class="text-content">
                    <h1 class="section-title-mixed">
                        <span class="title-mastro">ÜBER</span>
                        <span class="title-fugu">mich</span>
                    </h1>
                    <div class="text-body">
                        <p>
                            Seit ich denken kann, bin ich kreativ. Malen ist für
                            mich mehr als nur Farbe auf Leinwand zu bringen. Es
                            ist ein Ausdruck meiner Gefühle, eine Reise in mein
                            Inneres und eine Möglichkeit, die Welt um mich herum
                            zu verarbeiten.
                        </p>
                        <p>
                            In meinem Atelier in Ahaus entstehen abstrakte
                            Kunstwerke, die durch ihre Farben und Formen
                            bestechen. Ich liebe es, mit verschiedenen
                            Materialien zu experimentieren und neue Techniken
                            auszuprobieren.
                        </p>
                        <p>
                            Die Natur ist meine größte Inspirationsquelle. Die
                            Farben der Jahreszeiten, das Licht und die Schatten,
                            die Strukturen und Formen – all das fließt in meine
                            Bilder ein.
                        </p>
                        <p>
                            Ich lade dich ein, meine Galerie zu besuchen und
                            dich von meinen Werken inspirieren zu lassen.
                            Vielleicht findest du ja ein Bild, das dich berührt
                            und das du gerne in deinem Zuhause haben möchtest.
                        </p>
                    </div>
                </div>
                <div class="image-content">
                    <img
                        src="/kuenstlerfoto.jpg"
                        alt="Katharina Lanvermann"
                        class="about-image"
                    />
                </div>
            </div>
        </div>
    </section>

    <!-- Bisherige Arbeit Section (Preview) -->
    <section class="section py-16 light-section">
        <div class="container">
            <h2 class="section-title-center handwriting">Bisherige Arbeit</h2>
            <div class="gallery-grid">
                {recentArtworks.map((artwork) => (
                    <a href={`/werke/${artwork.id}`} class="gallery-item">
                        <img
                            src={artwork.images?.[0] || '/placeholder.jpg'}
                            alt={artwork.title}
                            loading="lazy"
                        />
                    </a>
                ))}
            </div>
        </div>
    </section>

    <!-- Quote Section -->
    <section class="section py-16 dark-section">
        <div class="container">
            <div class="quote-container">
                <p class="quote-text">
                    "Jedes Kunstwerk lässt mich wie einen visuellen
                    Geschichtenerzähler fühlen – ich lasse Kunst, Stil und
                    Gefühl miteinander verschmelzen."
                </p>
            </div>
        </div>
    </section>
</Layout>

<style>
    .dark-section {
        background-color: var(--color-dark);
        color: var(--color-text-light);
    }

    .light-section {
        background-color: var(--color-light);
        color: var(--color-text-dark);
    }

    .content-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--spacing-lg);
        align-items: start;
    }

    @media (min-width: 960px) {
        .content-grid {
            grid-template-columns: 1fr 1fr;
        }
    }

    .section-title {
        font-family: var(--font-serif);
        font-size: clamp(3rem, 6vw, 5rem);
        line-height: 0.9;
        margin-bottom: var(--spacing-md);
        font-weight: 400;
    }

    .section-title.handwriting {
        font-family: 'Dancing Script', cursive;
        font-weight: 500;
        line-height: 1.1;
        color: white;
    }

    /* Mixed Title Style - "ÜBER mich" */
    .section-title-mixed {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        margin-bottom: var(--spacing-lg);
        gap: var(--spacing-2);
    }

    .title-mastro {
        font-family: 'Mastro Display', serif;
        font-size: clamp(2rem, 4vw, 3rem);
        font-weight: 800;
        letter-spacing: 0.05em;
        color: var(--color-light);
        line-height: 1.1;
    }

    .title-fugu {
        font-family: 'Fugu', cursive;
        font-size: clamp(3rem, 6vw, 5rem);
        font-weight: 400;
        color: white;
        line-height: 1;
        letter-spacing: 0.02em;
    }

    @media (min-width: 640px) {
        .section-title-mixed {
            flex-direction: row;
            align-items: baseline;
            gap: var(--spacing-3);
        }
    }

    .section-title-center.handwriting {
        font-family: 'Dancing Script', cursive;
        font-size: clamp(2.5rem, 5vw, 4rem);
        font-weight: 500;
        line-height: 1.1;
    }

    .text-body p {
        margin-bottom: var(--spacing-sm);
        font-size: 1.1rem;
        line-height: 1.8;
        color: var(--color-light);
    }

    .about-image {
        width: 100%;
        aspect-ratio: 3/4;
        object-fit: cover;
        border-radius: 2px;
        box-shadow: var(--shadow-lg);
    }

    .section-title-center {
        font-family: var(--font-serif);
        font-size: clamp(2rem, 4vw, 3rem);
        text-align: center;
        margin-bottom: var(--spacing-lg);
        font-weight: 400;
        letter-spacing: 0.05em;
    }

    .gallery-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: var(--spacing-sm);
    }

    @media (min-width: 768px) {
        .gallery-grid {
            grid-template-columns: repeat(4, 1fr);
            gap: var(--spacing-md);
        }
    }

    .gallery-item img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        aspect-ratio: 1;
        transition: transform 0.5s ease;
    }

    .gallery-item {
        overflow: hidden;
    }

    .gallery-item:hover img {
        transform: scale(1.05);
    }

    .quote-container {
        max-width: 800px;
        margin: 0 auto;
        text-align: center;
    }

    .quote-text {
        font-family: 'Dancing Script', cursive;
        font-size: clamp(1.8rem, 3.5vw, 2.8rem);
        font-weight: 500;
        line-height: 1.5;
        color: var(--color-light);
    }
</style>
