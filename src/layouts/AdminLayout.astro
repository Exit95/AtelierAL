---
interface Props {
    title: string;
}

const { title } = Astro.props;
import "../styles/global.css";
---

<html lang="de">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title} - Admin | ATELIER KL</title>
    </head>
    <body>
        <div class="admin-container">
            <div id="menuOverlay" class="menu-overlay"></div>

            <nav id="adminNav" class="admin-nav">
                <div class="admin-nav-header">
                    <h1>ATELIER KL Admin</h1>
                    <button id="closeMenuBtn" class="close-menu-btn">√ó</button>
                </div>
                <ul class="admin-nav-menu">
                    <li><a href="/admin">üìä Dashboard</a></li>
                    <li><a href="/admin/workshops">üé® Workshops</a></li>
                    <li><a href="/admin/artworks">üñºÔ∏è Werke</a></li>
                    <li><a href="/admin/reviews">‚≠ê Bewertungen</a></li>
                </ul>
                <div class="admin-nav-footer">
                    <a href="/" target="_blank">‚Üó Zur Website</a>
                    <button id="logoutBtn" class="logout-btn"
                        >üö™ Abmelden</button
                    >
                </div>
            </nav>

            <main class="admin-main">
                <div class="admin-header">
                    <button id="menuToggleBtn" class="menu-toggle-btn">‚ò∞</button
                    >
                    <h2>{title}</h2>
                </div>
                <div class="admin-content">
                    <slot />
                </div>
            </main>
        </div>

        <script>
            // Mobile Menu Logic
            const menuBtn = document.getElementById("menuToggleBtn");
            const closeBtn = document.getElementById("closeMenuBtn");
            const nav = document.getElementById("adminNav");
            const overlay = document.getElementById("menuOverlay");

            function toggleMenu() {
                nav?.classList.toggle("open");
                overlay?.classList.toggle("open");
            }

            menuBtn?.addEventListener("click", toggleMenu);
            closeBtn?.addEventListener("click", toggleMenu);
            overlay?.addEventListener("click", toggleMenu);

            // Close menu when clicking a link on mobile
            const navLinks = nav?.querySelectorAll("a");
            navLinks?.forEach((link) => {
                link.addEventListener("click", () => {
                    if (window.innerWidth <= 768) {
                        toggleMenu();
                    }
                });
            });

            document
                .getElementById("logoutBtn")
                ?.addEventListener("click", async () => {
                    try {
                        await fetch("/api/auth/logout", { method: "POST" });
                        window.location.href = "/admin/login";
                    } catch (e) {
                        console.error("Logout error:", e);
                    }
                });
        </script>

        <style>
            .admin-container {
                display: flex;
                min-height: 100vh;
                background: linear-gradient(
                    135deg,
                    var(--color-brand-beige-light),
                    var(--color-surface)
                );
            }

            .admin-nav {
                width: 260px;
                background: white;
                color: var(--color-text-primary);
                display: flex;
                flex-direction: column;
                position: fixed;
                height: 100vh;
                overflow-y: auto;
                border-right: 1px solid var(--color-border-light);
                box-shadow: var(--shadow-md);
                z-index: 100;
                transition: transform 0.3s ease-in-out;
            }

            .admin-nav-header {
                padding: 2rem 1.5rem;
                border-bottom: 1px solid var(--color-border-light);
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            .admin-nav-header h1 {
                font-size: 1.5rem;
                margin: 0;
                color: var(--color-brand-beige);
                font-family: var(--font-headline);
                font-weight: var(--font-weight-bold);
            }

            .close-menu-btn {
                display: none;
                background: none;
                border: none;
                font-size: 1.5rem;
                cursor: pointer;
                color: var(--color-text-secondary);
            }

            .admin-nav-menu {
                flex: 1;
                padding: 1.5rem 0;
                list-style: none;
                margin: 0;
            }

            .admin-nav-menu li {
                margin: 0;
            }

            .admin-nav-menu a {
                display: block;
                padding: 0.875rem 1.5rem;
                color: var(--color-text-secondary);
                text-decoration: none;
                transition: all var(--transition-base);
                border-left: 3px solid transparent;
            }

            .admin-nav-menu a:hover {
                background: var(--color-brand-beige-light);
                color: var(--color-brand-beige-dark);
                border-left-color: var(--color-brand-beige);
            }

            .admin-nav-footer {
                padding: 1.5rem;
                border-top: 1px solid var(--color-border-light);
                background: var(--color-gray-50);
            }

            .admin-nav-footer a {
                display: block;
                color: var(--color-text-tertiary);
                text-decoration: none;
                margin-bottom: 0.75rem;
                font-size: var(--font-size-sm);
                transition: color var(--transition-fast);
            }

            .admin-nav-footer a:hover {
                color: var(--color-accent);
            }

            .logout-btn {
                width: 100%;
                padding: 0.75rem;
                background: var(--color-brand-beige);
                color: white;
                border: none;
                border-radius: var(--radius-sm);
                cursor: pointer;
                font-size: var(--font-size-sm);
                font-weight: var(--font-weight-semibold);
                transition: all var(--transition-base);
                font-family: var(--font-body);
            }

            .logout-btn:hover {
                background: var(--color-accent);
                transform: translateY(-1px);
                box-shadow: var(--shadow-md);
            }

            .admin-main {
                flex: 1;
                margin-left: 260px;
                padding: 0;
                width: 100%;
            }

            .admin-header {
                background: white;
                padding: 1.5rem 2rem;
                border-bottom: 1px solid var(--color-border-light);
                position: sticky;
                top: 0;
                z-index: 90;
                box-shadow: var(--shadow-sm);
                display: flex;
                align-items: center;
                gap: 1rem;
            }

            .menu-toggle-btn {
                display: none;
                background: none;
                border: none;
                font-size: 1.5rem;
                cursor: pointer;
                padding: 0.5rem;
                margin-left: -0.5rem;
                color: var(--color-text-primary);
            }

            .admin-header h2 {
                margin: 0;
                font-size: var(--font-size-3xl);
                color: var(--color-text-primary);
                font-family: var(--font-headline);
                font-weight: var(--font-weight-bold);
            }

            .admin-content {
                padding: 2rem;
            }

            .menu-overlay {
                display: none;
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(0, 0, 0, 0.5);
                z-index: 95;
                opacity: 0;
                transition: opacity 0.3s ease;
            }

            .menu-overlay.open {
                opacity: 1;
            }

            @media (max-width: 768px) {
                .admin-nav {
                    transform: translateX(-100%);
                }

                .admin-nav.open {
                    transform: translateX(0);
                }

                .admin-main {
                    margin-left: 0;
                }

                .menu-toggle-btn {
                    display: block;
                }

                .close-menu-btn {
                    display: block;
                }

                .menu-overlay.open {
                    display: block;
                }

                .admin-header {
                    padding: 1rem;
                }

                .admin-header h2 {
                    font-size: 1.25rem;
                }

                .admin-content {
                    padding: 1rem;
                }
            }
        </style>
    </body>
</html>
