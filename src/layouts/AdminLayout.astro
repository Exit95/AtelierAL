---
interface Props {
    title: string;
}

const { title } = Astro.props;
import "../styles/global.css";
---

<html lang="de">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title} - Admin | ATELIER KL</title>
    </head>
    <body>
        <div class="admin-container">
            <nav class="admin-nav">
                <div class="admin-nav-header">
                    <h1>ATELIER KL Admin</h1>
                </div>
                <ul class="admin-nav-menu">
                    <li><a href="/admin">üìä Dashboard</a></li>
                    <li><a href="/admin/workshops">üé® Workshops</a></li>
                    <li><a href="/admin/artworks">üñºÔ∏è Werke</a></li>
                </ul>
                <div class="admin-nav-footer">
                    <a href="/" target="_blank">‚Üó Zur Website</a>
                    <button id="logoutBtn" class="logout-btn"
                        >üö™ Abmelden</button
                    >
                </div>
            </nav>

            <main class="admin-main">
                <div class="admin-header">
                    <h2>{title}</h2>
                </div>
                <div class="admin-content">
                    <slot />
                </div>
            </main>
        </div>

        <script>
            document
                .getElementById("logoutBtn")
                ?.addEventListener("click", async () => {
                    try {
                        await fetch("/api/auth/logout", { method: "POST" });
                        window.location.href = "/admin/login";
                    } catch (e) {
                        console.error("Logout error:", e);
                    }
                });
        </script>

        <style>
            .admin-container {
                display: flex;
                min-height: 100vh;
                background: linear-gradient(
                    135deg,
                    var(--color-brand-beige-light),
                    var(--color-surface)
                );
            }

            .admin-nav {
                width: 260px;
                background: white;
                color: var(--color-text-primary);
                display: flex;
                flex-direction: column;
                position: fixed;
                height: 100vh;
                overflow-y: auto;
                border-right: 1px solid var(--color-border-light);
                box-shadow: var(--shadow-md);
            }

            .admin-nav-header {
                padding: 2rem 1.5rem;
                border-bottom: 1px solid var(--color-border-light);
            }

            .admin-nav-header h1 {
                font-size: 1.5rem;
                margin: 0;
                color: var(--color-brand-beige);
                font-family: var(--font-headline);
                font-weight: var(--font-weight-bold);
            }

            .admin-nav-menu {
                flex: 1;
                padding: 1.5rem 0;
                list-style: none;
                margin: 0;
            }

            .admin-nav-menu li {
                margin: 0;
            }

            .admin-nav-menu a {
                display: block;
                padding: 0.875rem 1.5rem;
                color: var(--color-text-secondary);
                text-decoration: none;
                transition: all var(--transition-base);
                border-left: 3px solid transparent;
            }

            .admin-nav-menu a:hover {
                background: var(--color-brand-beige-light);
                color: var(--color-brand-beige-dark);
                border-left-color: var(--color-brand-beige);
            }

            .admin-nav-footer {
                padding: 1.5rem;
                border-top: 1px solid var(--color-border-light);
                background: var(--color-gray-50);
            }

            .admin-nav-footer a {
                display: block;
                color: var(--color-text-tertiary);
                text-decoration: none;
                margin-bottom: 0.75rem;
                font-size: var(--font-size-sm);
                transition: color var(--transition-fast);
            }

            .admin-nav-footer a:hover {
                color: var(--color-accent);
            }

            .logout-btn {
                width: 100%;
                padding: 0.75rem;
                background: var(--color-brand-beige);
                color: white;
                border: none;
                border-radius: var(--radius-sm);
                cursor: pointer;
                font-size: var(--font-size-sm);
                font-weight: var(--font-weight-semibold);
                transition: all var(--transition-base);
                font-family: var(--font-body);
            }

            .logout-btn:hover {
                background: var(--color-accent);
                transform: translateY(-1px);
                box-shadow: var(--shadow-md);
            }

            .admin-main {
                flex: 1;
                margin-left: 260px;
                padding: 0;
            }

            .admin-header {
                background: white;
                padding: 1.5rem 2rem;
                border-bottom: 1px solid var(--color-border-light);
                position: sticky;
                top: 0;
                z-index: var(--z-sticky);
                box-shadow: var(--shadow-sm);
            }

            .admin-header h2 {
                margin: 0;
                font-size: var(--font-size-3xl);
                color: var(--color-text-primary);
                font-family: var(--font-headline);
                font-weight: var(--font-weight-bold);
            }

            .admin-content {
                padding: 2rem;
            }

            @media (max-width: 768px) {
                .admin-nav {
                    width: 70px;
                }

                .admin-nav-header h1 {
                    font-size: 0.875rem;
                    writing-mode: vertical-rl;
                }

                .admin-nav-menu a {
                    padding: 1rem 0.5rem;
                    text-align: center;
                    font-size: 1.5rem;
                }

                .admin-main {
                    margin-left: 70px;
                }

                .admin-header h2 {
                    font-size: var(--font-size-2xl);
                }
            }
        </style>
    </body>
</html>
